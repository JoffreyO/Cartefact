@model Cartefact.ViewModels.EditPersonViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div class="row">
    @using (Html.BeginForm("EditPerson", "Person", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @*@Html.EditorForModel()*@

        <input type="hidden" value="@Model.Id" />

        <div class="form-group">
            @Html.LabelFor(s => s.Name, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.NickName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(s => s.NickName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.Password, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(s => s.NewPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.DrivingHabits, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(s => s.DrivingHabits, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.DriverExperience, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(s => s.DriverExperience, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(s => s.DriverExperience, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Save changes</button>
            </div>
        </div>
    }
</div>