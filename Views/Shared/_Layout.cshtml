<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cartefact", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Session["Id"] == null)
                {
                    if (Session["Role"] == null)
                     {
                         <ul class="nav navbar-nav">
                             <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                             <li>@Html.ActionLink("Sign Up", "Inscription", "Person")</li>
                             <li>@Html.ActionLink("Log In", "Login", "Person")</li>
                         </ul>
                     }
                }
                @if(Session["Id"] != null)
                {
                    if ((string) Session["Role"] == "1")
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Create User", "Create", "Person")</li>
                            <li>@Html.ActionLink("List User", "List", "Person")</li>
                            <li>@Html.ActionLink("Edit User Account", "List", "Person")</li>
                            <li>@Html.ActionLink("Edit my Account", "EditAccount", "Person")</li>
                            <li>@Html.ActionLink("List Rental", "List", "Rental")</li>
                            <li>@Html.ActionLink("Add Rental", "Add", "Rental")</li>
                            <li>@Html.ActionLink("Add Car", "Add", "Car")</li>
                            <li>@Html.ActionLink("List Car", "List", "Car")</li>
                            <li>@Html.ActionLink("Log Out", "LoggedOut", "Person")</li>
                        </ul>
                    }
                }
                @if (Session["Id"] != null)
                {
                    if ((string)Session["Role"] == "0")
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Add Rental", "Add", "Rental")</li>
                            <li>@Html.ActionLink("Add Car", "Add", "Car")</li>
                            <li>@Html.ActionLink("List Car", "List", "Car")</li>
                            <li>@Html.ActionLink("Log Out", "LoggedOut", "Person")</li>
                        </ul>
                    }

                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cartefact</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
