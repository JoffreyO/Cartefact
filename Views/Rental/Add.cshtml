@model Cartefact.ViewModels.AddRentalViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add rental</h2>

<div class="row">
    @using (Html.BeginForm("Add", "Rental", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @*@Html.EditorForModel()*@
        <div class="form-group">
            @Html.LabelFor(s => s.StartDate, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(s => s.StartDate, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.EndDate, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(s => s.EndDate, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.Price, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(s => s.Price, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.CarId, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(s => s.CarId, Model.Car, new { @class = "form-control" })
            </div>
        </div>

        <button type="submit" class="btn btn-default">Add a rental</button>
    }
</div>